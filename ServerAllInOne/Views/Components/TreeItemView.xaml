<UserControl x:Class="ServerAllInOne.Views.Components.TreeItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ServerAllInOne.Views.Components"
             xmlns:viewModel="clr-namespace:ServerAllInOne.ViewModels.Components"
             xmlns:cal="http://caliburnmicro.com"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300"
             d:Background="White"
             d:DataContext="{d:DesignInstance Type=viewModel:TreeItemViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button cal:Message.Attach="ExpandButton_Click">
                <Button.Resources>
                    <ControlTemplate TargetType="Button" x:Key="expandButton">
                        <TextBlock Text="▶" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </ControlTemplate>
                    <ControlTemplate TargetType="Button" x:Key="collapseButton">
                        <TextBlock Text="▼" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </ControlTemplate>
                </Button.Resources>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="30" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                <Setter Property="Template" Value="{StaticResource collapseButton}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsExpanded}" Value="False">
                                <Setter Property="Template" Value="{StaticResource expandButton}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <TextBlock Grid.Column="1" Text="{Binding Title}" VerticalAlignment="Center" />
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <!--按钮组-->
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1" Margin="20,0,0,0" Visibility="{Binding IsExpanded,Converter={StaticResource booleanToVisibilityConverter}}">
            <ItemsControl ItemsSource="{Binding Children}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ContentControl cal:View.Model="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
